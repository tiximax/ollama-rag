# App provider
PROVIDER=ollama

# Ollama settings
OLLAMA_BASE_URL=http://localhost:11434
LLM_MODEL=llama3.1:8b
EMBED_MODEL=nomic-embed-text
OLLAMA_CONNECT_TIMEOUT=5
OLLAMA_READ_TIMEOUT=180
OLLAMA_MAX_RETRIES=3
OLLAMA_RETRY_BACKOFF=0.6
# Optional performance tuning
# OLLAMA_NUM_THREAD=4
# OLLAMA_NUM_CTX=2048
# OLLAMA_NUM_GPU=0

# OpenAI settings (only if using PROVIDER=openai)
# OPENAI_BASE_URL=https://api.openai.com/v1
# OPENAI_MODEL=gpt-4o-mini
# OPENAI_API_KEY=sk-...   # set via environment securely; do not commit real keys

# Persistence settings
# PERSIST_DIR=data/chroma
# Or use root + db
# PERSIST_ROOT=data/kb
# DB_NAME=default

# RRF / Retrieval defaults (optional)
# RRF_ENABLE=1
# RRF_K=60

# Chunking
# CHUNK_SIZE=800
# CHUNK_OVERLAP=120
